// MainMenu.cpp displays and inputs user data for Pet Service POS system.

#include <iostream>

using namespace std;


// functions for staff menu
class staffClass
{

public:

	string fName;
	string lName;
	int staffID;
	string staffJobTitle;
	string staffAddress;
	int staffPhoneNumber;
	float staffWage;

	//////////////////////////////////////////////////////////////////////////////////////////////////


	string const getFName()
	{
		return fName;
	};

	void setFName(string user_input)
	{
		fName = user_input;
	};

	void updateFName()
	{
		string str_input;
		cout << getFName() << endl;
		cin >> str_input;
		setFName(str_input);
	};
	//////////////////////////////////////////////////////////////////////////////////////////////////
	string const getLName()
	{
		return lName;
	};

	void setLName(string user_input)
	{
		lName = user_input;
	};

	void updateLName()
	{
		string str_input;
		cout << getLName() << endl;
		cin >> str_input;
		setLName(str_input);
	};
	//////////////////////////////////////////////////////////////////////////////////////////////////
	int getStaffID()
	{
		return staffID;
	};

	void setStaffID(int user_input)
	{
		staffID = user_input;
	};

	void updateStaffID()
	{
		int user_input;
		cout << getStaffID() << endl;
		cin >> user_input;
		setStaffID(user_input);
	};
	//////////////////////////////////////////////////////////////////////////////////////////////////
	string const getJobTitile()
	{
		return staffJobTitle;
	};

	void setJobTitle(string user_input)
	{
		staffJobTitle = user_input;
	};

	void updateJobTitile()
	{
		string str_input;
		cout << getJobTitile() << endl;
		cin >> str_input;
		setJobTitle(str_input);
	};
	//////////////////////////////////////////////////////////////////////////////////////////////////
	void setAddress(string user_input)
	{
		staffAddress = user_input;
	};

	string getAddress()
	{
		return staffAddress;
	};

	void updateAddress()
	{
		string str_input;
		cout << getAddress() << endl;
		cin >> str_input;
		setAddress(str_input);
	};

	//////////////////////////////////////////////////////////////////////////////////////////////////
	void setPhoneNumbers(int user_input)
	{
		staffPhoneNumber = user_input;
	};

	int getPhoneNumber()
	{
		return staffPhoneNumber;
	};

	void updatePhoneNumber()
	{
		int user_input;
		cout << getPhoneNumber() << endl;
		cin >> user_input;
		setPhoneNumbers(user_input);
	};
	//////////////////////////////////////////////////////////////////////////////////////////////////
	void setWage(float user_input)
	{
		staffWage = user_input;
	};

	float getWage()
	{
		return staffWage;
	};

	void updateWage()
	{
		float user_input;
		cout << getWage() << endl;
		cin >> user_input;
		setWage(user_input);
	};

	//////////////////////////////////////////////////////////////////////////////////////////////////
};

class manageStaffClass : staffClass
{
public:
	void manageStaff()
	{
		int choice;

		cout << "Enter (1) to update staff ID\n"
			<< "Enter (2) to update First name\n"
			<< "Enter (3) to update Last name\n"
			<< "Enter (4) to update Position\n"
			<< "Enter (5) to update Address\n"
			<< "Enter (6) to update Phone Number\n"
			<< "Enter (7) to update Wage\n";
		cin >> choice;
		switch (choice)
		{
		case 1:
		{
			updateStaffID();
			break;
		}
		case 2:
		{
			updateFName();
		}
		case 3:
		{
			updateLName();
		}
		case 4:
		{
			updateJobTitile();
		}
		case 5:
		{
			updateAddress();
		}
		case 6:
		{
			updatePhoneNumber();
			break;
		}
		case 7:
		{
			updateWage();
			break;
		}

		}
	};
};
//////////////////////////////////////////////////////////////////////////////////////////////////



//function for the selected item and operation
void MenuSelection(char selection)
{
    cout << "Choose Selection: ";
    cin >> selection;
    if (selection == '1')
    {
        void displayMainMenu();
    }

    //Display “Main Menu” over a popup; 

     //Await User Input;  

    if (selection == '2')
    {
        void displayStaffMenu();

		int choice;
		do
		{
			manageStaffClass stfCls;
			stfCls.manageStaff();
			cout << "Quit ? (0)" << endl;
			cin >> choice;
		} while (choice != 0);
        //Display “Staff Menu” over a popup; 

        //Await User Input;  
    }

   if (selection == '3')
   {
       void displayCustomerMenu();


       //Display “Customer Menu” over a popup; 

       //Await User Input;  

   }
   if (selection == '4')
   {

       char getString();


       //Await user input for storing string data  

       //return string; 

   }
   if (selection == '5')
   {

       char getChar();


       //Await user input for storing char data  

       //return char;  

   };

   if (selection == '6')
   {

       char getInt();



       //Await user input for storing int data 

       //return int;  

   };

}


//print the order
   void printOrder()
   {

    //This is where Order will be displayed
    cout << "Current Order:" << endl;


}

//Complete order will print the order and reset the all the item value
void completeOrder() {
    printOrder();

}


//Exit the Program
void exitPOS() {
    cout << "Thank you for using the Team 5 Pet Service System" << endl;
    system("PAUSE");
    exit(0);
}

//Print Main Menu
void printMenu() {
    cout << "---------------------------------" << endl;
    cout << "Pet Care System" << endl;
    cout << "---------------------------------" << endl;
    cout << "Menu" << endl;
    cout << "---------------------------------" << endl;
    cout << "1          Main Menu          " << endl;
    cout << "2          Staff Menu          " << endl;
    cout << "3          Customer Menu          " << endl;
    cout << "R          Reset" << endl;
    cout << "P          Print Order" << endl;
    cout << "C          Complete Order" << endl;
    cout << "X          Exit" << endl;
    cout << endl;
}


//Function Selection
void processMenuSelection(char selection) {
    if (selection == '1')
        MenuSelection(selection);

    else if (selection == '2')
        MenuSelection(selection);

    else if (selection == '3')
        MenuSelection(selection);

    else if (selection == '4')
        MenuSelection(selection);

    else if (selection == 'R' || selection == 'r')
        MenuSelection(selection);

    else if (selection == 'C' || selection == 'c')
        completeOrder();

    else if (selection == 'P' || selection == 'p')
        printOrder();

    else if (selection == 'X' || selection == 'x')
        exitPOS();

    else
        cout << "Wrong choice!" << endl;
}

//Main Function
int main()
{
    char MenuSelection;
    do {
        printMenu();
        cin >> MenuSelection;
        processMenuSelection(MenuSelection);
    } while (MenuSelection != 'X');
    return 0;


	system("pause");
	return 0;
}

